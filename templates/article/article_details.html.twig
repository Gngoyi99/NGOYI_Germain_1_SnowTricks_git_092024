{% extends 'base.html.twig' %}

{% block title %}{{ article.name }} - D√©tails{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <h1 class="mb-4">{{ article.name }}</h1>
            <p><strong>Description :</strong> {{ article.description }}</p>
            <p><strong>Cat√©gorie :</strong> <span class="badge bg-info text-dark">{{ article.category }}</span></p>
            <p class="text-muted">Publi√© le {{ article.createdAt|date('d/m/Y') }}</p>


            <h2 class="mt-4">Illustrations</h2>
            <div class="row g-3">
                {% for illustration in article.illustrations %}
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/illustrations/' ~ illustration.url) }}" alt="Illustration" class="img-fluid rounded shadow-sm">
                    </div>
                {% else %}
                    <p class="text-muted">Aucune illustration disponible.</p>
                {% endfor %}
            </div>

            <h2 class="mt-4">Vid√©os</h2>
            <div class="row">
                {% for video in article.videos %}
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="ratio ratio-16x9">
                                <iframe class="embed-responsive-item" 
                                    src="{{ video.videoUrl|replace({'watch?v=': 'embed/'}) }}" 
                                    allowfullscreen>
                                </iframe>
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">Vid√©o</h5>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p class="text-muted text-center">Aucune vid√©o disponible.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-4">
            <a href="{{ path('app_home') }}" class="btn btn-secondary w-100 mb-3">Retour √† la liste des articles</a>
            {% if is_granted('article_edit', article) %}
                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-warning btn-sm">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
            {% endif %}
            {% if is_granted('article_delete', article) %}
                <form method="post" action="{{ path('article_delete', {'id': article.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet article ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="mt-5">
        <h2>Commentaires</h2>
        <ul class="list-group">
            {% for message in messages %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>{{ message.user.username }}</strong>: {{ message.content }}
                        <p class="text-muted">Publi√© le {{ message.createdAt|date('d/m/Y') }}</p>

                    </div>
                    <div>
                        {# Utilisation du voter pour afficher les actions seulement si autoris√© #}
                        {% if is_granted('message_edit', message) %}
                            <a href="{{ path('editMessage', {'id': message.id}) }}" class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        {% endif %}

                        {% if is_granted('message_delete', message) %}
                            <form method="post" action="{{ path('deleteMessage', {'id': message.id}) }}" style="display:inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce commentaire ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </li>
            {% else %}
                <p class="text-muted">Aucun commentaire pour le moment.</p>
            {% endfor %}
        </ul>
    </div>

    <div class="d-flex justify-content-center mt-4">
        {% if currentPage > 1 %}
            <a href="{{ path('article_details', {id: article.id, slug: article.slug, page: currentPage - 1}) }}" class="btn btn-primary me-2">Pr√©c√©dent</a>
        {% endif %}

        {% for i in 1..totalPages %}
            <a href="{{ path('article_details', {id: article.id, slug: article.slug, page: i}) }}"
               class="btn {{ i == currentPage ? 'btn-secondary' : 'btn-light' }} me-2">
                {{ i }}
            </a>
        {% endfor %}

        {% if currentPage < totalPages %}
            <a href="{{ path('article_details', {id: article.id, slug: article.slug, page: currentPage + 1}) }}" class="btn btn-primary">Suivant</a>
        {% endif %}
    </div>

    <div class="mt-5">
    <h3>Ajouter un commentaire</h3>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.content, {'attr': {'class': 'form-control', 'placeholder': '√âcrivez votre commentaire ici...' }}) }}
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Envoyer
            </button>
        {{ form_end(form) }}
    {% else %}
        <div class="alert alert-warning text-center">
            <p>üöÄ <strong>Connectez-vous</strong> pour participer √† la discussion !</p>
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Se connecter</a>
        </div>
    {% endif %}

</div>

</div>
{% endblock %}
