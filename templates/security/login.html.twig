{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="text-center my-4">
            <img src="./images/snow.png" class="img-fluid" style="max-width: 600px;">
        </div>
        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary my-4" type="submit">
            Se connecter
        </button>

        {# Lien vers la page "Mot de passe oublié" #}
        <p class="mt-3">
            <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
        </p>
    </form>
{% endblock %}

